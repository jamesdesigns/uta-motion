
<Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd">
<!-- <Page
    class="page"
    navigatingTo="onNavigatingTo"  
    xmlns="http://schemas.nativescript.org/tns.xsd"> -->

    <ActionBar class="action-bar">
        <NavigationButton tap="onBackButtonTap" android.systemIcon="ic_menu_back"/>
        <Label class="action-bar-title" text="{{ name }}"></Label>
    </ActionBar>

    <ScrollView >

        <StackLayout orientation="vertical" width="230" height="610">
            <Label class="m-10" row="0" col="0" colspan="2" text="{{ station }}"></Label>
            <Label class="m-10 h3" row="0" col="1" colspan="2" text="{{ address }}"></Label> 
            <Label class="m-10 h3" row="0" col="2" colspan="2" text="{{ city }}"></Label>

  
            <Button class="btn btn-primary m-t-10" text="{{ routes.NBtime ? 'Hide' : 'North Bound' }}" tap="toggle"></Button>
            <Label text="North Bound" visibility="{{ routes.NBtime ? 'visible' : 'collapsed' }}" textWrap="true"></Label>
             <Label class="m-10 h3" row="0" col="2" colspan="2" text="{{ routes.NBtime }}" textWrap="true"></Label>
             
        </StackLayout>
    </ScrollView> 

</Page>